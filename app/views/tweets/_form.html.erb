<%= form_with(model: @tweet, local: true, url: new_or_edit) do |form| %>
    <% if @tweet.errors.any? %> 
      <div class="error_explanation">
      <h2>エラーが<%= @tweet.errors.count %>件あります。</h2>
        <ul>
          <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="tweet_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>
  <%= link_to '一覧へ',tweets_path %>